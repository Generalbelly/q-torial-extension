{
  "name": "Qtorial",
  "description": "Qtorial makes it easy and fun to build and maintain tutorials for user onboarding by enabling you to create them code-free",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "browser_action": {
    "default_title": "Qtorial"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs", "background", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contentScript.js", "driver.js"],
      "css": ["driver.css"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://still-protocol-228301.firebaseapp.com/*",
      "https://staging.q-torial.app/*"
    ]
  },
  "web_accessible_resources": ["contentScript.css", "spaUrlWatcher.js"],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
